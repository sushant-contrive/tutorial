---
import Blogpost from '../../components/Blogpost.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
    const uniqueTags = [...new Set(allPosts.flatMap((post: any) => post.frontmatter.tags)).values()];

  return uniqueTags.map((tag) => ({params: { tag: tag }, props: {posts: allPosts} }))
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post: any) => post.frontmatter.tags?.includes(tag));
---
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
    <ul>
    {filteredPosts.map((post: any) => <li> <Blogpost url={post.url} title={post.frontmatter.title}/> </li>) }
  </ul>
</BaseLayout>